<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity4"
    android:background="#ece3ce">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#561c24"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter your"
            android:textSize="25dp"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="employee details"
            android:textSize="25dp"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/empwhp1activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/empwph1activity"/>
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Name"
                    android:inputType="text"
                    android:textColorHint="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Address"
                    android:inputType="text"
                    android:textColorHint="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Date of Birth"
                    android:inputType="date"
                    android:textColorHint="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Email"
                    android:inputType="text"
                    android:textColorHint="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Phone number"
                    android:inputType="number"
                    android:textColorHint="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Seeking what job?"
                    android:inputType="text"
                    android:textColorHint="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/empwhp1activity_button"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:src="@drawable/enter"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="40dp"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#561c24"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_icon1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="House"
            android:scaleType="centerInside"
            android:src="@drawable/house"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/menu_icon2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Book"
            android:scaleType="centerInside"
            android:src="@drawable/book"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/menu_icon3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Person"
            android:scaleType="centerInside"
            android:src="@drawable/person"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/menu_icon4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Gear"
            android:scaleType="centerInside"
            android:src="@drawable/gear"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

    </LinearLayout>
</LinearLayout>
