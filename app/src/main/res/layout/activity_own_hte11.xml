<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity4"
    android:background="#ece3ce">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#561c24"
        android:orientation="vertical"
        android:gravity="center">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ownhte1activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/own1activity"/>
            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="-20dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Business Name"
                    android:inputType="text"
                    android:textColorHint="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Location"
                    android:inputType="text"
                    android:textColorHint="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Founder"
                    android:inputType="text"
                    android:textColorHint="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Email"
                    android:inputType="text"
                    android:textColorHint="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Phone number"
                    android:inputType="number"
                    android:textColorHint="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Seeking what applicants?"
                    android:inputType="text"
                    android:textColorHint="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingStart="20dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="20dp"
                    android:background="@color/white"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/ownhte1activity_button"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:src="@drawable/enter"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="40dp"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#561c24"
        android:gravity="center"
        android:orientation="horizontal">

    </LinearLayout>
</LinearLayout>
