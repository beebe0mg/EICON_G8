<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity4"
    android:background="#561c24">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#561c24"
        android:gravity="center"
        android:text="@string/cpa"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ece3ce"
        android:padding="10dp">

        <ImageView
            android:id="@+id/overlay_image1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:contentDescription="Overlay1"
            android:scaleType="centerCrop"
            android:src="@drawable/arrowleft" />

        <ImageView
            android:id="@+id/overlay_image2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:contentDescription="Overlay2"
            android:scaleType="centerCrop"
            android:src="@drawable/profilepic" />

        <ImageView
            android:id="@+id/cpacourselogo1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-350dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="CPACourseLogo"
            android:src="@drawable/cpacourselogo" />

        <ImageView
            android:id="@+id/additional_image2"
            android:layout_width="255dp"
            android:layout_height="163dp"
            android:layout_below="@id/cpacourselogo1"
            android:layout_marginTop="-530dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="-165dp"
            android:layout_toStartOf="@id/cpacourselogo1"
            android:contentDescription="Additional Image 2"
            android:src="@drawable/totalamount1000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/additional_image2"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginTop="-60dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Card Number"
                        android:inputType="number"
                        android:textColorHint="#000000"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:padding="20dp"
                        android:textColor="#000000"
                        android:layout_margin="2dp"
                        android:backgroundTint="@android:color/black"/>

                    <EditText
                        android:id="@+id/expiry_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name on Card"
                        android:textColorHint="#000000"
                        android:inputType="text"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:padding="20dp"
                        android:textColor="#000000"
                        android:layout_margin="2dp"
                        android:backgroundTint="@android:color/black"/>

                    <EditText
                        android:id="@+id/cvc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Expiration Date (MM/YY)"
                        android:textColorHint="#000000"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:inputType="text"
                        android:padding="20dp"
                        android:textColor="#000000"
                        android:layout_margin="2dp"
                        android:backgroundTint="@android:color/black"/>

                    <EditText
                        android:id="@+id/cardholder_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="#000000"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:hint="Security Code"
                        android:inputType="text"
                        android:padding="20dp"
                        android:textColor="#000000"
                        android:layout_margin="2dp"
                        android:backgroundTint="@android:color/black"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/additional_image3"
                    android:layout_width="190dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="-10dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="Additional Image 3"
                    android:scaleType="centerCrop"
                    android:src="@drawable/paybutton" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/visa1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="visa"
                    android:layout_marginTop="0dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/visalogo" />

                <ImageView
                    android:id="@+id/mastercard1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="mastercard"
                    android:layout_marginTop="0dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/mastercardlogo" />

                <ImageView
                    android:id="@+id/amex1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="0dp"
                    android:contentDescription="amex"
                    android:scaleType="centerInside"
                    android:src="@drawable/amexlogo" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#561c24"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_icon1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="House"
            android:scaleType="centerInside"
            android:src="@drawable/house"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/menu_icon2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Book"
            android:scaleType="centerInside"
            android:src="@drawable/book"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/menu_icon3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Person"
            android:scaleType="centerInside"
            android:src="@drawable/person"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/menu_icon4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Gear"
            android:scaleType="centerInside"
            android:src="@drawable/gear"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

    </LinearLayout>
</LinearLayout>
