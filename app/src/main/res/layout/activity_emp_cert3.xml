<!-- 정상미(beebeOmg) -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity4"
    android:background="#ece3ce">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#561c24"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Screen"
            android:textSize="30dp"
            android:textColor="#fff"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/empcert3activity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/empcert3activity"/>
            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="250dp"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_marginTop="230dp"
                android:layout_marginStart="18.5dp">

                <EditText
                    android:id="@+id/card_number"
                    android:layout_width="match_parent"
                    android:layout_height="59.5dp"
                    android:hint="Card Number"
                    android:inputType="number"
                    android:textColorHint="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:padding="20dp"
                    android:textColor="#000000"
                    android:layout_margin="2dp"
                    android:backgroundTint="@android:color/black"/>

                <EditText
                    android:id="@+id/expiry_date"
                    android:layout_width="match_parent"
                    android:layout_height="59.5dp"
                    android:hint="Name on Card"
                    android:textColorHint="#000000"
                    android:inputType="text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:padding="20dp"
                    android:textColor="#000000"
                    android:layout_margin="2dp"
                    android:backgroundTint="@android:color/black"/>

                <EditText
                    android:id="@+id/cvc"
                    android:layout_width="match_parent"
                    android:layout_height="59.5dp"
                    android:hint="Expiration Date (MM/YY)"
                    android:textColorHint="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:inputType="text"
                    android:padding="20dp"
                    android:textColor="#000000"
                    android:layout_margin="2dp"
                    android:backgroundTint="@android:color/black"/>

                <EditText
                    android:id="@+id/cardholder_name"
                    android:layout_width="match_parent"
                    android:layout_height="59.5dp"
                    android:textColorHint="#000000"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:hint="Security Code"
                    android:inputType="text"
                    android:padding="20dp"
                    android:textColor="#000000"
                    android:layout_margin="2dp"
                    android:backgroundTint="@android:color/black"/>

            </LinearLayout>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginBottom="60dp"
                android:src="@drawable/paybutton"
                android:layout_gravity="center|bottom"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#561c24"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_icon1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="House"
            android:scaleType="centerInside"
            android:src="@drawable/house"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/menu_icon2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Book"
            android:scaleType="centerInside"
            android:src="@drawable/book"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/menu_icon3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Person"
            android:scaleType="centerInside"
            android:src="@drawable/person"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/menu_icon4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Gear"
            android:scaleType="centerInside"
            android:src="@drawable/gear"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

    </LinearLayout>
</LinearLayout>
