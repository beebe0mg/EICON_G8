<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity4"
    android:background="#ece3ce">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#561c24"></LinearLayout>

<!--    -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ownhome11activity"/>

            <ImageView
                android:id="@+id/ownhome1activity_button1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/micheal"
                android:layout_gravity="bottom"
                android:layout_marginBottom="190dp"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:id="@+id/ownhome1activity_button2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="bottom"
                android:src="@drawable/accountanticon"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="20dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:src="@drawable/ownhomemenu_back"
                android:layout_marginTop="-7dp"
                android:layout_marginStart="-70dp"/>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:layout_marginTop="18dp"
                android:layout_marginStart="93dp"
                android:gravity="center">
                <ImageView
                    android:id="@+id/ReAp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/ownhomemenu1"
                    android:scaleType="fitCenter"
                    android:layout_marginBottom="10dp"/>
                <ImageView
                    android:id="@+id/EFS"
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:src="@drawable/ownhomemenu2"
                    android:scaleType="fitCenter"/>
                <ImageView
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginBottom="-3dp"
                    android:src="@drawable/ownhomemenu_line"
                    android:scaleType="fitCenter"/>
                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/ownhomemenu3"/>
                <ImageView
                    android:id="@+id/switch_menu"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:src="@drawable/ownhomemenu4"/>
            </LinearLayout>
            <Button
                android:id="@+id/own_home2"
                android:layout_marginStart="30dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@android:color/transparent"
                android:text=""
                android:contentDescription="list"/>
        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#561c24"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_icon1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="House"
            android:scaleType="centerInside"
            android:src="@drawable/house"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/menu_icon2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Book"
            android:scaleType="centerInside"
            android:src="@drawable/book"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/menu_icon3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Person"
            android:scaleType="centerInside"
            android:src="@drawable/person"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/menu_icon4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Gear"
            android:scaleType="centerInside"
            android:src="@drawable/gear"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

    </LinearLayout>
</LinearLayout>
