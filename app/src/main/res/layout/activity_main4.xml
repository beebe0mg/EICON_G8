<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity4">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:background="#561c24"
        android:gravity="center"
        android:text="@string/cpa"
        android:textColor="#ffffff"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ece3ce"
        android:padding="10dp">

        <!-- 배경색 위에 올릴 이미지 -->
        <ImageView
            android:id="@+id/overlay_image1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:contentDescription="Overlay1"
            android:scaleType="centerCrop"
            android:src="@drawable/arrowleft" />

        <ImageView
            android:id="@+id/overlay_image2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:contentDescription="Overlay2"
            android:scaleType="centerCrop"
            android:src="@drawable/profilepic" />

        <ImageView
            android:id="@+id/cpacourselogo1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-350dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="CPACourseLogo"
            android:src="@drawable/cpacourselogo" />

        <ImageView
            android:id="@+id/additional_image2"
            android:layout_width="255dp"
            android:layout_height="163dp"
            android:layout_below="@id/cpacourselogo1"
            android:layout_marginTop="-530dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="-165dp"
            android:layout_toStartOf="@id/cpacourselogo1"
            android:contentDescription="Additional Image 2"
            android:src="@drawable/totalamount1000" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#561c24"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_icon1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="House"
            android:scaleType="centerInside"
            android:src="@drawable/house"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/menu_icon2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Book"
            android:scaleType="centerInside"
            android:src="@drawable/book"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/menu_icon3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Person"
            android:scaleType="centerInside"
            android:src="@drawable/person"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

        <ImageView
            android:id="@+id/menu_icon4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="Gear"
            android:scaleType="centerInside"
            android:src="@drawable/gear"
            android:tint="@android:color/white"
            tools:ignore="UseAppTint" />

    </LinearLayout>
</LinearLayout>